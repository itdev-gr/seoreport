---
interface Props {
  title: string;
  value: string | number;
  change: number;
  changeLabel?: string;
  sparkData: number[];
  icon: string;
}

const { title, value, change, changeLabel = 'vs προηγ. περίοδο', sparkData, icon } = Astro.props;
const isPositive = change >= 0;
const maxSpark = sparkData.length ? Math.max(...sparkData) : 1;
---

<div class="metric-card group rounded-xl bg-white p-5 shadow-card transition-all duration-200 hover:shadow-card-hover border border-gray-100">
  <div class="flex items-start justify-between">
    <div class="flex items-center gap-3">
      <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary/10 text-primary transition-colors group-hover:bg-primary/15">
        {icon === 'eye' && (
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
        )}
        {icon === 'click' && (
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122" />
          </svg>
        )}
        {icon === 'position' && (
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12" />
          </svg>
        )}
        {icon === 'ctr' && (
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
        )}
        {icon === 'total-clicks' && (
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
          </svg>
        )}
        {icon === 'keywords' && (
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
          </svg>
        )}
      </div>
      <span class="text-sm font-medium text-gray-600">{title}</span>
    </div>
  </div>
  <p class="mt-3 text-2xl font-bold tracking-tight text-dark">{value}</p>
  <div class="mt-2 flex items-center gap-2">
    <span class={`inline-flex items-center text-sm font-medium ${isPositive ? 'text-emerald-600' : 'text-red-600'}`}>
      {isPositive ? '↑' : '↓'} {Math.abs(change).toFixed(1)}%
    </span>
    {changeLabel && <span class="text-xs text-gray-500">{changeLabel}</span>}
  </div>
  <div class="mt-4 h-10 w-full" id={`spark-${title.replace(/\s/g, '-')}`}>
    <svg class="h-10 w-full" viewBox="0 0 200 40" preserveAspectRatio="none">
      <polyline
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"
        class="text-primary/40"
        points={sparkData.map((v, i) => `${(i / (sparkData.length - 1)) * 200},${40 - (v / maxSpark) * 36}`).join(' ')}
      />
    </svg>
  </div>
</div>
